<nav id="nav-{{name}}" class="nav nav__{{name}}" role="navigation">
  <ul class="nav--list list-inline">
  {% for item in menu.get_items %}
    <li class="nav--item is-top-level {{item.classes | join(' ')}}">
      <a class="nav--link" href="{{item.get_link}}">{{item.title}}</a>
      {% if item.get_children %}
        <ul class="nav--drop">
        {% for child in item.get_children %}
          <li class="nav--item {{child.classes | join(' ')}}">
            <a class="nav--link" href="{{child.get_link}}">{{child.title}}</a>
          </li>
        {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
  </ul>
</nav>
